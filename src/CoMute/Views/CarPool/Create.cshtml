@model CoMute.Web.Models.Dto.CreateCarPoolRequest

@{
    ViewBag.Title = "Create";
}

<h2>Create Car Pool</h2>


@{ ViewBag.Title = "Register"; }

<form id="addcarpool">
    @*<h2>Create Car Pool</h2>*@

    <div id="error" class="row row-margin hidden">
        <div class="col-md-4 col-md-offset-4 alert alert-danger">
            <p></p>
        </div>
    </div>

    <div class="form-group">
        <label for="origin">Origin</label>
        <input type="text" id="origin" class="form-control" placeholder="Origin" required autofocus>
    </div>

    <div class="form-group">
        <label for="destination">Destination</label>
        <input type="text" id="destination" class="form-control" placeholder="Destination" required>
    </div>

    <div class="form-group">
        <label for="departureTime">Departure Time</label>
        <input type="time" id="departureTime" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="expectedArrivaltime">Expected Arrival Time</label>
        <input type="time" id="expectedArrivaltime" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="availableSeats">Available Seats</label>
        <input type="number" id="availableSeats" class="form-control" placeholder="0" required>
    </div>
    
    <div class="form-group">
        <label for="notes">Notes</label>
        <textarea id="notes" class="form-control" placeholder="Notes" rows="2"></textarea>

    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit" id="addCarPool">Save</button>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "SearchCarPools")
</div>

@section scripts {
    <script type="text/javascript" src="~/Content/js/CarPool.js"></script>
}
